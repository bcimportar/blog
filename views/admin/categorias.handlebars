<h2>Lista de Categorias</h2>
<hr />
<a href="/admin/categorias/add"><button class="btn btn-success">Nova categoria</button></a>
{{#each categorias}}
  <div class="card mt-4">
    <div class="card-body">
      <hr />
      <h4>{{nome}}</h4>
      <small>Slug:{{slug}} </small><br />
      <small>Data de criação:{{date}} </small><br />
    </div>
    <a href="/admin/editcategorias/edit/{{_id}}">
      <button class="btn btn-success mt-2">Editar Categoria</button>
    </a>
  </div>
{{/each}}