<h2>Lista de Categorias</h2>
<hr />
<a href="/admin/categorias/add"><button class="btn btn-success">Nova categoria</button></a>
{{#each categorias}}
  <div class="card mt-4">
    <div class="card-body">
      <hr />
      <h4>{{nome}}</h4>
      <small>Slug:{{slug}} </small><br />
      <small>Data de criação:{{date}} </small><br />
    </div>
    <a href="/admin/editcategorias/edit/{{_id}}">
      <button class="btn btn-success mt-2">Editar Categoria</button>
    </a>
    <form action="/admin/categorias/deletar"method="POST">
      <input type="hidden" name="id" id="" value="{{_id}}"/>
      <button type="submit" class="btn btn-danger mt-2">Deletar categoria</button>
    </form>
  </div>
  {{else}}
  <h4 class="mt-3">Nenhuma categoria registrada</h4>
{{/each}}